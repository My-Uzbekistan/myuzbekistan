<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Discount for {}</MudText>
        <MudDivider/>
        <MudTextField @bind-Value="PackageDiscountView.DiscountPercentage" 
                      Label="@L["DiscountPercentage"]" 
                      AutoFocus="true" 
                      Class="mt-3"
                      Variant="Variant.Text" 
                      Required="true" />
        <MudTextField @bind-Value="PackageDiscountView.DiscountPrice" 
                      Label="@L["DiscountPrice"]"
                      AutoFocus="true" 
                      Class="mt-3"
                      Variant="Variant.Text" 
                      Required="true" />
        <MudDatePicker @bind-Value="PackageDiscountView.StartDate" 
                       Label="@L["StartDate"]" 
                       Class="mt-3" 
                       Variant="Variant.Text"
                       Required="true" />
        <MudDatePicker @bind-Value="PackageDiscountView.EndDate"
                       Label="@L["EndDate"]" 
                        Class="mt-3" 
                       Variant="Variant.Text"
                       Required="true" />
        <MudSelect Margin="Margin.Dense" For="@(() => PackageDiscountView.Status)" Class="mt-3" @bind-Value="PackageDiscountView.Status" Label="@L["Status"]" T="ContentStatus" Required="true" Variant="Variant.Text">
            <MudSelectItem T="ContentStatus" Value="(ContentStatus)ContentStatus.Active">@L["Active"]</MudSelectItem>
            <MudSelectItem T="ContentStatus" Value="(ContentStatus)ContentStatus.Inactive">@L["Inactive"]</MudSelectItem>
        </MudSelect>
        <input type="hidden" @bind-value="PackageDiscountView.Id">
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">@L["Cancel"]</MudButton>
    </DialogActions>
</MudDialog>