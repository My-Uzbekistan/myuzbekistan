<EditForm Model="@Model" OnValidSubmit="@OnValidSubmit">
<FormContainer Title="@GetTitle()" MaxWidth="MaxWidth.ExtraLarge">
    <Actions>
        <SaveCancelButton OnCancel='() => Injector.PageHistoryState.Back("cardcolors")' Processing="@Processing" />
    </Actions>
    <ChildContent>
        <MudGrid>
            <MudItem xs="8">
                <MudPaper Class="pa-4">
                        <ObjectGraphDataAnnotationsValidator />
                        <ValidationSummary />
                            <MudTextField  @bind-Value="Model.Name" Label="Name" AutoFocus="true" Variant="Variant.Text" For="@(() => Model.Name)"Required="true"/>
                            <MudTextField  @bind-Value="Model.ColorCode" Label="ColorCode" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.ColorCode)"Required="true"/>
                            <input type="hidden" @bind-value="Model.Id"> 
                </MudPaper>
            </MudItem>
        </MudGrid>
    </ChildContent>
</FormContainer>
</EditForm>