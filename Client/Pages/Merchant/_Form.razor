<EditForm Model="@Model" OnValidSubmit="@OnValidSubmit">
    <FormContainer Title="@GetTitle()" MaxWidth="MaxWidth.ExtraLarge">
        <Actions>
            <SaveCancelButton OnCancel='() => Injector.PageHistoryState.Back("merchants")' Processing="@Processing" />
        </Actions>
        <ChildContent>
            <MudGrid>
                <MudItem xs="8">
                    <MudPaper Class="pa-4">
                        <ObjectGraphDataAnnotationsValidator />
                        <ValidationSummary />
                        <ImageSelectView @bind-Value="Model.LogoView" />
                        <MudTextField @bind-Value="Model.Name" Label="@L["Name"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.Name)" />
                        <MudTextField @bind-Value="Model.Description" Label="@L["Description"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.Description)" />
                        <MudTextField @bind-Value="Model.Address" Label="@L["Address"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.Address)" />
                        <MudTextField @bind-Value="Model.MXIK" Label="@L["MXIK"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.MXIK)" />
                        <MudTextField @bind-Value="Model.WorkTime" Label="@L["WorkTime"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.WorkTime)" />
                        <MudTextField @bind-Value="Model.Phone" Label="@L["Phone"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.Phone)" />
                        <MudTextField @bind-Value="Model.Responsible" Label="@L["Responsible"]" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.Responsible)" Required="true" />
                        <MudSwitch Color="Color.Primary" Label="@L["Status"]"  @bind-Checked="Model.Status" For="@(() => Model.Status)" Required="true" />
                        <input type="hidden" @bind-value="Model.Id">
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </ChildContent>
    </FormContainer>
</EditForm>