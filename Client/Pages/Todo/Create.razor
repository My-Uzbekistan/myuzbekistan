@page "/todos/create"

@inject UICommander Command
@inject ISnackbar Snackbar
@inject NavigationManager navigation
@inject Session Session

<Client.Pages.Todo._Form OnSubmit="OnSubmit" Processing="@Processing" IsNew="true"/>

@code {
 
    public bool Processing {get;set;} = false;

    public async Task OnSubmit(TodoView entity)
    {
       Processing = true;
       

       var response= await Command.Run(new CreateTodoCommand(Session,entity));
       if(response.HasError)
       {
          Snackbar.Add(@L["Error"]+" : "+response.Error?.Message, Severity.Error);
       }
       else
       {
          Snackbar.Add(@L["SuccessCreate"], Severity.Success);
          navigation.NavigateTo("/todos");
       }
       Processing = false;
    }
}
