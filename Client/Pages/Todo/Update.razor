@page "/todos/{Id:long}"

@inherits ComputedStateComponent<TodoView>
@inject ITodoService TodoService
@inject UICommander Command
@inject ISnackbar Snackbar
@inject NavigationManager navigation
@inject Session Session

@{
    var Model = State.LastNonErrorValue ?? new TodoView() { };
}

<Client.Pages.Todo._Form OnSubmit="OnSubmit" Model="Model" Processing="@Processing" IsNew="false"/>



@code {
    [Parameter]
    public long Id { get; set; }

    public bool Processing {get;set;}=false;
    
    public async Task OnSubmit(TodoView entity)
    {
       Processing =true;
     
     
       var response = await Command.Run(new UpdateTodoCommand(Session,entity));
       if(response.HasError)
       {
          Snackbar.Add(@L["Error"]+" : "+response.Error?.Message,Severity.Success);
       }
       else
       {
          Snackbar.Add(@L["SuccessUpdate"], Severity.Success);
          navigation.NavigateTo("/todos");
       }

       Processing=false;
    }

    protected override async Task<TodoView> ComputeState(CancellationToken cancellationToken)
    {
        return await TodoService.Get(Id,cancellationToken);
    }
}
