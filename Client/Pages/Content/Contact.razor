<MudPaper Class="pa-4">
    <MudText Typo="Typo.h6" Class="mb-4">@L["Contact_ManageContacts"]</MudText>

    @foreach (var contact in PhoneNumbers)
    {
        <MudGrid Class="mb-3" AlignItems="AlignItems.Center">
            <MudItem xs="12" md="2">
                <MudSelect T="string" @bind-Value="contact.Icon" SelectedValuesChanged="Changed" Label="@L["Contact_ContactType"]" >
                    <MudSelectItem Value="@("telegram.svg")">@L["Telegram"]</MudSelectItem>
                    <MudSelectItem Value="@("phone.svg")">@L["Phone"]</MudSelectItem>
                    <MudSelectItem Value="@("instagram.svg")">@L["Instagram"]</MudSelectItem>
                    <MudSelectItem Value="@("whatsapp.svg")">@L["WhatsApp"]</MudSelectItem>
                </MudSelect>
            </MudItem>

            <MudItem xs="12" md="4">
                @if (contact.Icon == "phone.svg" || contact.Icon == "whatsapp.svg" || contact.Icon == "telegram.svg")
                {
                    <MudTextField @bind-Value="contact.Contact" TextChanged="Changed" 
                                  Placeholder="(__) ___ __ __"
                                  Mask="@(new PatternMask("(00) 000-00-00"))"
                                  Adornment="Adornment.Start"
                                  AdornmentText="+998" Label="@L["Contact_PhoneNumber"]" />
                }
                else
                {
                    <MudTextField @bind-Value="contact.Contact" TextChanged="Changed" Label="@L["Contact_Username"]"   />
                }
            </MudItem>

            <MudItem xs="12" md="2">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => RemoveContact(contact))" />
            </MudItem>
        </MudGrid>
    }

    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="AddContact">
        @L["Contact_AddContact"]
    </MudButton>
</MudPaper>

@code {
    [Parameter]
    public List<CallInformation> PhoneNumbers { get; set; } = new();
    [Parameter]
    public EventCallback<List<CallInformation>> PhoneNumbersChange { get; set; }

    private async Task AddContact()
    {
        PhoneNumbers.Add(new CallInformation
            {
                Contact = string.Empty,
                Name = string.Empty,
                Icon = "phone.svg" // Значение по умолчанию
            });

        await PhoneNumbersChange.InvokeAsync(PhoneNumbers);

    }

    private async Task Changed()
    {
        await PhoneNumbersChange.InvokeAsync(PhoneNumbers);
    }

    private async Task RemoveContact(CallInformation contact)
    {
        PhoneNumbers.Remove(contact);
        await PhoneNumbersChange.InvokeAsync(PhoneNumbers);
    }
}
