<EditForm Model="@Model" OnValidSubmit="@OnValidSubmit">
<FormContainer Title="@GetTitle()" MaxWidth="MaxWidth.ExtraLarge">
    <Actions>
        <SaveCancelButton OnCancel='() => Injector.PageHistoryState.Back("cardprefixes")' Processing="@Processing" />
    </Actions>
    <ChildContent>
        <MudGrid>
            <MudItem xs="8">
                <MudPaper Class="pa-4">
                        <ObjectGraphDataAnnotationsValidator />
                        <ValidationSummary />
                            <MudTextField  @bind-Value="Model.Prefix" Label="Prefix" AutoFocus="true" Variant="Variant.Text" For="@(() => Model.Prefix)"/>
                            <MudTextField  @bind-Value="Model.BankName" Label="BankName" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.BankName)"/>
                            <MudTextField  @bind-Value="Model.CardType" Label="CardType" AutoFocus="false" Variant="Variant.Text" For="@(() => Model.CardType)"/>
                            <input type="hidden" @bind-value="Model.Id"> 
                </MudPaper>
            </MudItem>
        </MudGrid>
    </ChildContent>
</FormContainer>
</EditForm>