@page "/favorites/{Id:long}"

@inherits ComputedStateComponent<FavoriteView>
@inject IFavoriteService FavoriteService
@inject UICommander Command
@inject ISnackbar Snackbar
@inject NavigationManager navigation
@inject Session Session

@{
    var Model = State.LastNonErrorValue ?? new FavoriteView() { };
}

<Client.Pages.Favorite._Form OnSubmit="OnSubmit" Model="Model" Processing="@Processing" IsNew="false"/>



@code {
    [Parameter]
    public long Id { get; set; }

    public bool Processing {get;set;}=false;
    
    public async Task OnSubmit(FavoriteView entity)
    {
       Processing =true;
     
     
       var response = await Command.Run(new UpdateFavoriteCommand(Session,entity));
       if(response.HasError)
       {
          Snackbar.Add(@L["Error"]+" : "+response.Error?.Message,Severity.Success);
       }
       else
       {
          Snackbar.Add(@L["SuccessUpdate"], Severity.Success);
          navigation.NavigateTo("/favorites");
       }

       Processing=false;
    }

    protected override async Task<FavoriteView> ComputeState(CancellationToken cancellationToken)
    {
        return await FavoriteService.Get(Id,cancellationToken);
    }
}
